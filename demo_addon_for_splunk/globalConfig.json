{
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "name": "account",
                    "entity": [
                        {
                            "type": "text",
                            "label": "Account ID",
                            "field": "account_id",
                            "help": "Your MaxMind Account ID (found in your MaxMind account portal).",
                            "required": true,
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Account ID must be a numeric value.",
                                    "pattern": "^[0-9]+$"
                                },
                                {
                                    "type": "string",
                                    "errorMsg": "Length of Account ID should be between 1 and 20",
                                    "minLength": 1,
                                    "maxLength": 20
                                }
                            ]
                        },
                        {
                            "type": "text",
                            "label": "License Key",
                            "field": "license_key",
                            "help": "Your MaxMind License Key (generate in your MaxMind account under 'Manage License Keys').",
                            "required": true,
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Length of License Key should be between 1 and 100",
                                    "minLength": 1,
                                    "maxLength": 100
                                }
                            ]
                        }
                    ],
                    "title": "MaxMind Account"
                },
                {
                    "name": "databases",
                    "title": "Databases",
                    "table": {
                        "header": [
                            {
                                "label": "Database Name",
                                "field": "name"
                            }
                        ],
                        "actions": [
                            "edit",
                            "delete"
                        ]
                    },
                    "entity": [
                        {
                            "type": "text",
                            "label": "Database Name",
                            "field": "name",
                            "required": true,
                            "help": "MaxMind database name (e.g., GeoIP2-City, GeoIP2-Anonymous-IP)",
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Database name can only contain letters, numbers, and hyphens.",
                                    "pattern": "^[A-Za-z0-9-]+$"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "loggingTab"
                }
            ],
            "title": "Configuration",
            "description": "Configure your MaxMind account and databases"
        }
    },
    "meta": {
        "name": "demo_addon_for_splunk",
        "restRoot": "demo_addon_for_splunk",
        "version": "1.0.0",
        "displayName": "Demo Add-on for Splunk",
        "schemaVersion": "0.0.10",
        "supportedThemes": [
            "light",
            "dark"
        ]
    },
    "customSearchCommand": [
        {
            "commandName": "maxmind",
            "fileName": "maxmind_command.py",
            "commandType": "streaming",
            "arguments": [
                {
                    "name": "field",
                    "validate": {
                        "type": "Fieldname"
                    },
                    "required": false,
                    "defaultValue": "ip"
                },
                {
                    "name": "prefix",
                    "required": false,
                    "defaultValue": ""
                },
                {
                    "name": "databases",
                    "required": true
                }
            ]
        }
    ]
}
